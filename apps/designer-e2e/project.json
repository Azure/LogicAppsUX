{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/designer-e2e/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nrwl/cypress:cypress",
      "options": {
        "cypressConfig": "apps/designer-e2e/cypress.json",
        "devServerTarget": "designer:storybook"
      },
      "configurations": {
        "debugchrome": {
          "headed": true,
          "browser": "chrome"
        },
        "debugedge": {
          "headed": true,
          "browser": "edge"
        },
        "debugfirefox": {
          "headed": true,
          "browser": "firefox"
        },
        "debug": {
          "headed": true,
          "exit": false
        },
        "ci": {
          "devServerTarget": "designer:storybook:ci",
          "headed": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/designer-e2e/**/*.{js,ts}"]
      }
    }
  }
}
