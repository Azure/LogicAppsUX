{
    "extends": [
        "../../.eslintrc.json"
    ],
    "ignorePatterns": [
        "!**/*",
        "**/node_modules/**",
        "**/build/**",
        "**/__test__/**",
        "**/__tests__/**"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "react-hooks/rules-of-hooks": "off"
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}