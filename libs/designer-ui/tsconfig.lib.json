{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "../../dist/rollup/libs/designer-ui",
    "outDir": "../../dist/rollup/libs/designer-ui",
    "composite": true,
    "types": ["node"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "jest.config.ts",
    "rollup.config.ts"
  ],
  "references": [{ "path": "../logic-apps-shared" }, { "path": "../services/designer-client-services" }],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
