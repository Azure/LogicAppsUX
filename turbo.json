{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "dangerouslyDisablePackageManagerCheck": true,

  "tasks": {
    "test:vscode:run": {
      "cache": false
    },
    "vscode-designer#test:vscode:run": {
      "cache": false
    },
    "e2e": {
      "cache": false,
      "persistent": true
    },
    "build:docs": {
      "outputs": ["build/**"]
    },
    "build": {
      "dependsOn": ["^build:lib"],
      "outputs": ["build/**"]
    },
    "build:lib": {
      "outputs": ["build/**"]
    },
    "vscode-designer#build:extension": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "vscode-react#build:extension": {
      "cache": false,
      "dependsOn": ["vscode-designer#build:extension"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "unpublish:local": {
      "cache": false
    },
    "publish:local": {
      "cache": false,
      "dependsOn": ["build:lib", "^publish:local"]
    },
    "test:lib": {
      "outputs": ["coverage/**"]
    },
    "test:extension-unit": {
      "outputs": ["coverage/**"]
    },
    "vscode:designer:pack": {
      "cache": false,
      "dependsOn": ["vscode-react#build:extension"]
    },
    "e2e-setup": {
      "cache": false
    },
    "vscode-designer#test:ui": {
      "cache": false
    },
    "vscode-designer#test:ui:headless": {
      "cache": false
    }
  }
}
