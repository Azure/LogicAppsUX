{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "e2e": {
            "cache": false,
            "persistent": true
        },
        "build:docs": {
            "outputs": [
                "build/**"
            ]
        },
        "build": {
            "dependsOn": [
                "^build:lib"
            ],
            "outputs": [
                "build/**"
            ]
        },
        "build:lib": {
            "outputs": [
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "publish:local": {
            "dependsOn": [
                "build",
                "^publish:local"
            ]
        },
        "test:lib": {
            "outputs": [
                "coverage/**"
            ]
        }
    }
}