{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react",
    "reactNamespace": "React",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@designer/*": ["./src/*"],
      "@designer": ["./src/index"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
