{
  "definition": {
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "actions": {
      "Agent": {
        "type": "Agent",
        "inputs": {
          "parameters": {
            "deploymentId": "test",
            "messages": [
              {
                "role": "System",
                "content": "This is a system message."
              },
              {
                "role": "User",
                "content": "This is a user message.",
                "image": "image data",
                "author": "chat user name"
              }
            ],
            "temperature": 1
          }
        },
        "tools": {
          "If_Condition_Y_Matches": {
            "actions": {
              "Service Bus": {
                "type": "connector",
                "inputs": {
                  "operations": "getQueues,getTopics,getTopicSubcriptions,sendMessage",
                  "connector": "/serviceProviders/serviceBus"
                },
                "runAfter": {}
              }
            },
            "description": "If the condition Y matches, execute this branch",
            "type": "Tool"
          },
          "If_Condition_X_Matches": {
            "actions": {
              "HTTP": {
                "type": "Http",
                "inputs": {
                  "uri": "http://test.com",
                  "method": "GET",
                  "body": "@triggerBody()"
                },
                "runtimeConfiguration": {
                  "contentTransfer": {
                    "transferMode": "Chunked"
                  }
                }
              }
            },
            "description": "If the condition X matches, execute this branch",
            "type": "Tool",
            "agentParameterSchema": {
              "type": "object",
              "properties": {
                "Property1": {
                  "type": "string"
                },
                "Property2": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "runAfter": {}
      }
    },
    "contentVersion": "1.0.0.0",
    "outputs": {},
    "parameters": {},
    "triggers": {
      "When_a_HTTP_request_is_received": {
        "type": "Request",
        "kind": "Http"
      }
    }
  },
  "kind": "Stateful"
}
