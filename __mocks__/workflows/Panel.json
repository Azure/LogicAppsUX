{
  "definition": {
    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
    "actions": {
      "Compose": {
        "inputs": "@triggerOutputs()?['body']?['content']",
        "runAfter": {},
        "type": "Compose"
      },
      "Condition": {
        "actions": {
          "Compose_2": {
            "inputs": "blah blue @{outputs('Compose')}",
            "runAfter": {},
            "type": "Compose"
          }
        },
        "else": {
          "actions": {
            "Switch": {
              "cases": {
                "Case": {
                  "actions": {
                    "Compose_3": {
                      "inputs": "hello @{triggerOutputs()?['body']?['fileMetadata']?['name']}",
                      "runAfter": {},
                      "type": "Compose"
                    }
                  },
                  "case": "abc"
                }
              },
              "default": {
                "actions": {}
              },
              "expression": "@outputs('Compose')",
              "runAfter": {},
              "type": "Switch"
            }
          }
        },
        "expression": {
          "and": [
            {
              "equals": ["A", "A"]
            }
          ]
        },
        "runAfter": {
          "Compose": ["Succeeded"]
        },
        "type": "If"
      }
    },
    "contentVersion": "1.0.0.0",
    "outputs": {},
    "triggers": {
      "When_a_file_is_added_or_updated": {
        "inputs": {
          "parameters": {
            "folderPath": "/path",
            "includeFileContent": false
          },
          "serviceProviderConfiguration": {
            "connectionName": "Sftp",
            "operationId": "whenFilesAreAddedOrModified",
            "serviceProviderId": "/serviceProviders/Sftp"
          }
        },
        "kind": "Polling",
        "recurrence": {
          "frequency": "Month",
          "interval": 15
        },
        "splitOn": "@triggerOutputs()?['body']",
        "type": "ServiceProvider"
      }
    }
  },
  "kind": "Stateful"
}
